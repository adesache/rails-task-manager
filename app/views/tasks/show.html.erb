<h1> <%= @task.title %></h1>

<p> <%= @task.details %></p>

<%= link_to "Edit task", edit_path(@task) %>

<% if @task.completed? %>
  <p><input type="checkbox" checked> This task is completed</p>
<% else %>
  <p><input type="checkbox"> This task is NOT completed</p>
<% end %>

<%= link_to 'Back to tasks list', tasks_path %>
